# Use the official Elixir image for development
FROM elixir:1.15-alpine

# Install build dependencies (including nodejs for esbuild/tailwind)
RUN apk add --no-cache alpine-sdk nodejs npm git python3 postgresql-client inotify-tools

# Prepare build directory
WORKDIR /app

# Install hex + rebar
RUN mix local.hex --force && \
    mix local.rebar --force

# Set environment
ENV MIX_ENV=dev

# Install dependencies first for better caching
COPY mix.exs mix.lock ./
RUN mix deps.get

# Copy assets first
COPY assets assets

# Copy package files to assets and install npm dependencies
COPY package.json package-lock.json ./assets/
RUN npm ci --prefix assets || npm install --prefix assets

# Copy the rest of the application
COPY . .

# Create database and run migrations (will be done in docker-compose)
# RUN mix ecto.create
# RUN mix ecto.migrate

# Expose port
EXPOSE 4000

# Start the Phoenix server
CMD ["mix", "phx.server"]