# Use the official Elixir image for development
FROM elixir:1.15-alpine

# Install build dependencies
RUN apk add --no-cache alpine-sdk npm git python3 postgresql-client

# Prepare build directory
WORKDIR /app

# Install hex + rebar
RUN mix local.hex --force && \
    mix local.rebar --force

# Set environment
ENV MIX_ENV=dev

# Install dependencies first for better caching
COPY mix.exs mix.lock ./
RUN mix deps.get

# Copy the rest of the application
COPY . .

# Create database and run migrations (will be done in docker-compose)
# RUN mix ecto.create
# RUN mix ecto.migrate

# Expose port
EXPOSE 4000

# Start the Phoenix server
CMD ["mix", "phx.server"]