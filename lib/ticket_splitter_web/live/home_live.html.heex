<Layouts.app flash={@flash}>
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8">
    <div class="max-w-4xl mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Ticket Splitter</h1>
        <p class="text-lg text-gray-600">Sube una foto de tu ticket y deja que la IA lo analice</p>
      </div>

      <!-- Upload Area -->
      <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
        <form id="upload-form" phx-submit="validate" phx-change="validate">
          <div class="upload-area" phx-drop-target={@uploads.image.ref}>
            <.live_file_input upload={@uploads.image} class="hidden" />
            
            <div class="border-2 border-dashed border-gray-300 rounded-xl p-8 text-center hover:border-indigo-400 transition-colors duration-200">
              <div class="space-y-4">
                <div class="mx-auto w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center">
                  <.icon name="hero-camera" class="w-8 h-8 text-indigo-600" />
                </div>
                
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">Sube tu ticket</h3>
                  <p class="text-gray-600 mb-4">
                    Haz click para seleccionar una imagen o arrastra aquí
                  </p>
                  <p class="text-sm text-gray-500">
                    Formatos soportados: JPG, PNG, WEBP (máx. 10MB)
                  </p>
                </div>

                <button
                  type="button"
                  class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors duration-200 focus:ring-4 focus:ring-indigo-200 focus:outline-none"
                  onclick="document.querySelector('#upload-form input[type=file]').click()"
                >
                  <.icon name="hero-photo" class="w-5 h-5 mr-2" />
                  Seleccionar imagen
                </button>

                <!-- Botón específico para móvil -->
                <div class="block sm:hidden">
                  <button
                    type="button"
                    class="inline-flex items-center px-6 py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors duration-200 focus:ring-4 focus:ring-green-200 focus:outline-none ml-2"
                    onclick="document.querySelector('#upload-form input[type=file]').setAttribute('capture', 'environment'); document.querySelector('#upload-form input[type=file]').click();"
                  >
                    <.icon name="hero-camera" class="w-5 h-5 mr-2" />
                    Tomar foto
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Upload Progress -->
          <%= for entry <- @uploads.image.entries do %>
            <div class="mt-4 p-4 bg-blue-50 rounded-lg">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <.icon name="hero-document" class="w-5 h-5 text-blue-600 mr-2" />
                  <span class="text-sm font-medium text-blue-900">{entry.client_name}</span>
                </div>
                <button
                  type="button"
                  phx-click="cancel-upload"
                  phx-value-ref={entry.ref}
                  class="text-red-500 hover:text-red-700"
                >
                  <.icon name="hero-x-mark" class="w-5 h-5" />
                </button>
              </div>
              
              <div class="mt-2">
                <div class="bg-blue-200 rounded-full h-2">
                  <div
                    class="bg-blue-600 h-2 rounded-full transition-all duration-300"
                    style={"width: #{entry.progress}%"}
                  >
                  </div>
                </div>
                <div class="flex justify-between text-xs text-blue-700 mt-1">
                  <span>{entry.progress}%</span>
                  <span>{format_file_size(entry.client_size)}</span>
                </div>
              </div>

              <!-- Errors -->
              <%= for err <- upload_errors(@uploads.image, entry) do %>
                <div class="mt-2 text-sm text-red-600">
                  {error_to_string(err)}
                </div>
              <% end %>
            </div>
          <% end %>

          <!-- General Upload Errors -->
          <%= for err <- upload_errors(@uploads.image) do %>
            <div class="mt-4 p-3 bg-red-50 border border-red-200 rounded-lg text-sm text-red-700">
              {error_to_string(err)}
            </div>
          <% end %>
        </form>
      </div>

      <!-- Processing Status -->
      <%= if @processing do %>
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
          <div class="text-center">
            <div class="animate-spin inline-block w-8 h-8 border-4 border-current border-t-transparent text-indigo-600 rounded-full mb-4"></div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Procesando imagen...</h3>
            <p class="text-gray-600">Enviando a OpenRouter para análisis</p>
          </div>
        </div>
      <% end %>

      <!-- Error Display -->
      <%= if @error do %>
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
          <div class="text-center">
            <div class="mx-auto w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mb-4">
              <.icon name="hero-exclamation-triangle" class="w-8 h-8 text-red-600" />
            </div>
            <h3 class="text-lg font-semibold text-red-900 mb-2">Error</h3>
            <p class="text-red-700 mb-4">{@error}</p>
            <button
              phx-click="clear-result"
              class="inline-flex items-center px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition-colors duration-200"
            >
              Intentar de nuevo
            </button>
          </div>
        </div>
      <% end %>

      <!-- Results Display -->
      <%= if @result do %>
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
          <div class="flex justify-between items-start mb-6">
            <h3 class="text-2xl font-bold text-gray-900">Resultado del análisis</h3>
            <button
              phx-click="clear-result"
              class="inline-flex items-center px-4 py-2 bg-gray-600 text-white font-medium rounded-lg hover:bg-gray-700 transition-colors duration-200"
            >
              <.icon name="hero-arrow-path" class="w-4 h-4 mr-2" />
              Nueva imagen
            </button>
          </div>

          <!-- Response Content -->
          <%= if @result["choices"] && length(@result["choices"]) > 0 do %>
            <div class="space-y-4">
              <%= for {choice, index} <- Enum.with_index(@result["choices"]) do %>
                <div class="p-6 bg-gray-50 rounded-xl">
                  <h4 class="font-semibold text-gray-900 mb-3">
                    Respuesta {index + 1}
                  </h4>
                  <div class="prose max-w-none text-gray-700">
                    {choice["message"]["content"]}
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Usage Information -->
            <%= if @result["usage"] do %>
              <div class="mt-6 p-4 bg-blue-50 rounded-lg">
                <h4 class="font-semibold text-blue-900 mb-2">Información de uso</h4>
                <div class="grid grid-cols-3 gap-4 text-sm">
                  <div>
                    <span class="text-blue-700">Tokens prompt:</span>
                    <span class="font-medium">{@result["usage"]["prompt_tokens"]}</span>
                  </div>
                  <div>
                    <span class="text-blue-700">Tokens respuesta:</span>
                    <span class="font-medium">{@result["usage"]["completion_tokens"]}</span>
                  </div>
                  <div>
                    <span class="text-blue-700">Total:</span>
                    <span class="font-medium">{@result["usage"]["total_tokens"]}</span>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-8">
              <p class="text-gray-600">No se recibió respuesta válida del servicio.</p>
            </div>
          <% end %>

          <!-- Raw JSON (for debugging) -->
          <details class="mt-6">
            <summary class="cursor-pointer text-sm text-gray-600 hover:text-gray-800">
              Ver respuesta completa (JSON)
            </summary>
            <pre class="mt-4 p-4 bg-gray-100 rounded-lg text-xs overflow-x-auto">
{Jason.encode!(@result, pretty: true)}
            </pre>
          </details>
        </div>
      <% end %>

      <!-- Uploaded Files List -->
      <%= if @uploaded_files != [] do %>
        <div class="bg-white rounded-2xl shadow-xl p-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Archivos procesados</h3>
          <div class="space-y-3">
            <%= for file <- @uploaded_files do %>
              <div class="flex items-center p-3 bg-green-50 rounded-lg">
                <.icon name="hero-check-circle" class="w-5 h-5 text-green-600 mr-3" />
                <span class="text-sm font-medium text-green-900">{file.filename}</span>
                <span class="text-xs text-green-700 ml-2">({file.content_type})</span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</Layouts.app>