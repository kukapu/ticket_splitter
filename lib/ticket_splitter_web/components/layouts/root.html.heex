<!DOCTYPE html>
<html lang={assigns[:locale] || "es"} class="bg-base-300">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="csrf-token" content={get_csrf_token()} />

    <%!-- PWA Meta Tags --%>
    <meta name="theme-color" id="theme-color-meta" content="#7B61FF" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-title" content="Ticket Splitter" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="application-name" content="Ticket Splitter" />
    <meta name="msapplication-TileColor" content="#7B61FF" />
    <meta name="msapplication-config" content="none" />

    <%!-- SEO Meta Tags (dinámicos) --%>
    <SEOMeta.seo_meta
      page_title={assigns[:page_title]}
      page_description={assigns[:page_description]}
      page_image={assigns[:page_image]}
      page_url={assigns[:page_url]}
      page_type={assigns[:page_type] || "website"}
    />

    <%!-- Structured Data JSON-LD --%>
    <SEOMeta.structured_data page_url={assigns[:page_url]} />

    <%!-- PWA Manifest --%>
    <link rel="manifest" href="/manifest.json" />

    <%!-- Favicon - SVG para navegadores, PNG para PWA --%>
    <link rel="icon" type="image/svg+xml" href={~p"/images/logo.svg"} />
    <link rel="icon" type="image/png" sizes="192x192" href={~p"/images/icon-192x192.png"} />
    <link rel="icon" type="image/png" sizes="512x512" href={~p"/images/icon-512x512.png"} />
    <link rel="apple-touch-icon" sizes="180x180" href={~p"/images/apple-touch-icon.png"} />
    <link rel="alternate icon" href={~p"/favicon.ico"} />

    <.live_title default="Ticket Splitter">
      {assigns[:page_title] || "Ticket Splitter"}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        // Colores del tema para la barra del navegador móvil PWA
        const themeColors = {
          light: "#7B61FF",  // Color primario de la marca para tema claro
          dark: "#7B61FF"    // Color primario de la marca para tema oscuro
        };

        const setTheme = (theme) => {
          localStorage.setItem("phx:theme", theme);
          document.documentElement.setAttribute("data-theme", theme);
          
          // Actualizar el meta theme-color para la barra del navegador móvil
          const themeColorMeta = document.getElementById("theme-color-meta");
          if (themeColorMeta) {
            themeColorMeta.setAttribute("content", themeColors[theme] || themeColors.light);
          }
        };

        // Always set theme on page load
        const savedTheme = localStorage.getItem("phx:theme") || "light";
        setTheme(savedTheme);

        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "light"));

        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body class="bg-base-300">
    {@inner_content}
  </body>
</html>
